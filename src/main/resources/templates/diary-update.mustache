{{>header}}
{{#diary}}
<div class="col-md-12">
    <div class="col-md-4">
        <span data-diary-id={{id}}></span>
        <form>
            <div class="form-group">
                <label for="title">제목</label>
                <input type="text" class="form-control" id="title" placeholder="제목을 입력하세요" value={{title}}>
            </div>
            <div class="form-group">
                <label for="body">내용</label>
                <input type="text" class="form-control" id="body" placeholder="내용을 입력하세요" value={{body}}>
            </div>
            <div class="form-group">
                <label for="private">비공개여부</label>
                <input type="checkbox" class="form-control" id="is-private" name="isPrivate" value={{isPrivate}}>
            </div>
            <div class="form-group" id="action-list">
                <label for="actions">Actions</label>
                <button type="button" id="btn-action-add">Action 추가</button>
                {{#actions}}
                    <p>
                        <input name="comment[]" type="text" value={{comment}}>
                        <select name="type[]" value={{type}}>
                            <option value="Work">Work</option>
                            <option value="Study">Study</option>
                            <option value="Exercise">Exercise</option>
                            <option value="Hobby">Hobby</option>
                            <option value="Any">Any</option>
                        </select>
                        <input name="id[]" type="hidden" value={{id}}>
                        <button type="button" id="btn-action-delete">삭제</button>
                    </p>
                {{/actions}}
            </div>
        </form>
        <a href="/diary/{{id}}" role="button" class="btn btn-secondary">수정 취소</a>
        <button type="button" class="btn btn-primary" id="btn-update">등록</button>
    </div>
</div>
{{/diary}}
{{^diary}}
    <h2> diary 로드에 실패했습니다. </h2>
{{/diary}}
<script src="/js/app/diary-update.js"></script>
{{>footer}}